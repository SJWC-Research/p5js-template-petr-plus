{
  "compilerOptions": {
    // emitting JS files
    "outDir": "tsc-out",
    "noEmitOnError": true,

    // output kind
    "target": "ES2015",
    "module": "ES2015",

    // handling source modules
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,

    // checking syntax
    "strict": true,
    "noImplicitReturns": true,

    // formatting
    "newLine": "LF"
  },
  "include": ["./src/**/*.ts"]
}
