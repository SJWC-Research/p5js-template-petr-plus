{
    "compilerOptions": {
        "outDir": "./out",
        "moduleResolution": "node",
        "target": "es2015",
        "module": "es2015",
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "newLine": "LF"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
