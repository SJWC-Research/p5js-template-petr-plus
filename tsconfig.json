{
  "compilerOptions": {
    "outDir": "./out",
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "ES2015",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "newLine": "LF",
    "isolatedModules": true
  },
  "include": ["./src/**/*.ts"]
}
