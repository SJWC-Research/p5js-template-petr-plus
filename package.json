{
  "name": "p5-ts-template",
  "description": "Template project for p5.js sketches using TypeScript and other typical tools.",
  "version": "0.1.0",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/p5": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.36.1",
    "terser": "^5.5.1",
    "typescript": "^4.1.3"
  },
  "private": true,
  "scripts": {
    "build": "run-s transpile bundle lint:dist format:dist minify",
    "transpile": "tsc --skipLibCheck",
    "bundle": "rollup --config",
    "lint:dist": "eslint --fix dist/main.js",
    "format:dist": "prettier --write dist/main.js",
    "minify": "terser dist/main.js --output dist/main.min.js --source-map",
    "vscode": "run-s vscode:*",
    "vscode:eslint": "code --install-extension dbaeumer.vscode-eslint",
    "vscode:prettier": "code --install-extension esbenp.prettier-vscode"
  }
}
